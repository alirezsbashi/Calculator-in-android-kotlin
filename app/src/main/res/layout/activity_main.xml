<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_calculat_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:padding="5dp"
                tools:text="13 + 8 "
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_calculat_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:padding="10dp"
                tools:text="13984"
                android:textSize="30dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_calculat_operator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="+"
            android:textSize="30dp" />


    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:stretchColumns="*">

        <TableRow
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_calculat_1"
                android:onClick="OnClick"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_calculat_2"
                android:onClick="OnClick"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_calculat_3"
                android:onClick="OnClick"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_calculat_clear"
                android:onClick="OnClick"
                android:layout_height="match_parent"
                android:text="clear"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_calculat_4"
                android:onClick="OnClick"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_calculat_5"
                android:onClick="OnClick"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_calculat_6"
                android:onClick="OnClick"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_calculat_plus"
                android:onClick="OnClick"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_calculat_7"
                android:onClick="OnClick"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_calculat_8"
                android:onClick="OnClick"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_calculat_9"
                android:onClick="OnClick"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_calculat_min"
                android:onClick="OnClick"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_calculat_0"
                android:onClick="OnClick"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_calculat_equals"
                android:onClick="OnClick"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_calculat_mul"
                android:onClick="OnClick"
                android:layout_height="match_parent"
                android:text="*"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_calculat_div"
                android:onClick="OnClick"
                android:layout_height="match_parent"
                android:text="/"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

        </TableRow>

    </TableLayout>


</LinearLayout>